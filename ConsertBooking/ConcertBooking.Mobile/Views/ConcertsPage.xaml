<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConcertBooking.Mobile.Views.ConcertsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Föreställningar">

    <VerticalStackLayout Padding="16" Spacing="12">

        <!-- Loading -->
        <ActivityIndicator
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}" />

        <!-- Error -->
        <Label
            Text="{Binding ErrorMessage}"
            TextColor="Red"
            FontSize="14" />

        <!-- Performances list -->
        <CollectionView ItemsSource="{Binding Concerts}" 
                SelectionMode="Single"
                SelectedItem="{Binding SelectedConcert, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Margin="0,6" BackgroundColor="Orange">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding BookingsCount, StringFormat='Bokningar: {0}'}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
