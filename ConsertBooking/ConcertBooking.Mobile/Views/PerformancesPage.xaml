<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConcertBooking.Mobile.Views.PerformancesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Föreställningar">

    <VerticalStackLayout Padding="16" Spacing="12">

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Red" />

        <CollectionView 
    ItemsSource="{Binding Performances}"
    SelectionMode="Single"
    SelectedItem="{Binding SelectedPerformance, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" Margin="0,6">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightGray" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding DateTime, StringFormat='{0:yyyy-MM-dd HH:mm}'}"
                           FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Location}" FontSize="14" />
                            <Label Text="{Binding BookingsCount, StringFormat='Bokningar: {0}'}"
                           FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
